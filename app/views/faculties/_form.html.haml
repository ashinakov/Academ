= form_for @faculty do |f|
  -if @faculty.errors.any?
    #error_explanation
      %h2= "#{pluralize(@faculty.errors.count, "error")} prohibited this faculty from being saved:"
      %ul
        - @faculty.errors.full_messages.each do |msg|
          %li= msg

  .field
    Название
    = f.text_field :name
  .field
    Короткое название
    = f.text_field :short_name
  .actions
    = f.submit 'Сохранить'
