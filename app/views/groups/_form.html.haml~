= form_for @group do |f|
  -if @group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@group.errors.count, "error")} prohibited this group from being saved:"
      %ul
        - @group.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :number
    = f.text_field :number
  .field
    = f.label :id_faculty
    = f.select :faculty_id,Faculty.all.map{|fa| [fa.name,fa.id]}
  .actions
    = f.submit 'Сохранить'
