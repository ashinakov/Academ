= form_for @teacher do |f|
  -if @teacher.errors.any?
    #error_explanation
      %h2= "#{pluralize(@teacher.errors.count, "error")} prohibited this teacher from being saved:"
      %ul
        - @teacher.errors.full_messages.each do |msg|
          %li= msg


  .field
    = f.label :Фамилия
    = f.text_field :l_name
  .field
    = f.label :Имя
    = f.text_field :f_name
  .field
    = f.label :Отчество
    = f.text_field :s_name
  .field
    = f.label :Логин
    = f.text_field :login
  .field
    = f.label :Пароль
    = f.text_field :password
  .field
    = f.label :Кафедра
    = f.select :chair_id,Chair.all.map{|c| [c.name,c.id]}
  .actions
    = f.submit 'Сохранить'
