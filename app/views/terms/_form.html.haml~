= form_for @term do |f|
  -if @term.errors.any?
    #error_explanation
      %h2= "#{pluralize(@term.errors.count, "error")} prohibited this term from being saved:"
      %ul
        - @term.errors.full_messages.each do |msg|
          %li= msg

  .field
    Название
    %br
    = f.text_field :name
  .field
    Коротке название
    %br
    = f.text_field :short_name
  .field
    Текущий семестр
    = f.check_box :current
  .actions
    = f.submit 'Сохранить'
